        #weeks.btn-group.mr-2.mb-2(role="group" aria-label="Week of Session")
          button.btn.btn-outline-primary(type="button" data-week="1") Week 1
          button.btn.btn-outline-primary(type="button" data-week="2") 2
          button.btn.btn-outline-primary(type="button" data-week="3") 3
          button.btn.btn-outline-primary(type="button" data-week="4") 4
          button.btn.btn-outline-primary(type="button" data-week="5") 5
          button.btn.btn-outline-primary(type="button" data-week="6") 6
          button.btn.btn-outline-primary(type="button" data-week="7") 7
          button.btn.btn-outline-primary(type="button" data-week="full") All

        #groups.btn-group.mr-2.mb-2(role="group" aria-label="Student Groups")
          button.btn.btn-outline-info(type="button" data-group="1") Group 1
          button.btn.btn-outline-info(type="button" data-group="2") 2
          button.btn.btn-outline-info(type="button" data-group="3") 3

