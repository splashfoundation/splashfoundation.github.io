mixin tile(label, image, videoUrl)
  if videoUrl
    a.card.ml-2.mr-2.mb-2(href=videoUrl target="_blank" class!=attributes.class)
      img.card-img-top(src='images/'+image alt="skill demonstration" width="200" height="200")
      .card-body
        p.card-text.text-center= label
  else
    .card.ml-2.mr-2.mb-2(class!=attributes.class)
      img.card-img-top(src='images/'+image alt="skill demonstration" width="180" height="180")
      .card-body
        p.card-text.text-center= label

doctype html
html(lang="en")
  head
    title Splash Skill Sequence
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="shortcut icon" href="http://www.splashfoundation.org/assets/favicon.png")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
